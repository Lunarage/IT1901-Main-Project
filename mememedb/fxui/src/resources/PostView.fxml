<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root type="AnchorPane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fxui.PostViewController">
  <children>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
         <children>
            <Label fx:id="postByLabel" layoutX="414.0" layoutY="5.0" prefHeight="17.0" prefWidth="67.0" />
            <Label fx:id="caption" layoutX="419.0" layoutY="47.0" prefHeight="17.0" prefWidth="5.0">
               <font>
                  <Font name="System Italic" size="13.0" />
               </font>
            </Label>
            <ImageView fx:id="imageView" fitHeight="400.0" fitWidth="416.0" pickOnBounds="true" preserveRatio="true" />
            <Label fx:id="captionLabel" layoutX="414.0" layoutY="25.0" prefHeight="22.0" prefWidth="58.0" text="Caption: " />
            <Label layoutX="416.0" layoutY="72.0" text="Comments: " />
            <ListView fx:id="commentListView" layoutX="414.0" layoutY="89.0" prefHeight="249.0" prefWidth="233.0" />
            <FlowPane layoutX="414.0" layoutY="342.0" prefHeight="44.0" prefWidth="231.0">
               <children>
                  <TextField fx:id="commentInput" prefHeight="0.0" prefWidth="227.0" />
                  <Button fx:id="commentButton" mnemonicParsing="false" onAction="#addComment" text="Add Comment" />
                  <Label fx:id="errorLabel" textFill="RED" />
               </children>
            </FlowPane>
         </children>
    </AnchorPane>
  </children>
</fx:root>
