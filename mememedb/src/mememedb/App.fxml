<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mememedb.AppController">
  <top>
  </top>
  <bottom>
  </bottom>
   <top>
    <HBox prefWidth="674.0" style="-fx-background-color: #AAAAAA;" BorderPane.alignment="CENTER">
         <ImageView fx:id="userpic" fitHeight="52.0" fitWidth="49.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@../resources/img/Grandma.png" />
            </image>
         </ImageView><Label fx:id="username" text="xXx__gertrude__xXx">
            <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding></Label>
         <Button fx:id="logout" mnemonicParsing="false" text="Log out" /></HBox>
   </top>
   <center>
      <ScrollPane fitToWidth="true" prefHeight="200.0" prefWidth="200.0" vbarPolicy="ALWAYS" BorderPane.alignment="CENTER">
        <content>
            <VBox fx:id="content" spacing="10.0" />
        </content>
      </ScrollPane>
   </center>
   <right>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" text="Search..." />
            <Button fx:id="postButton" mnemonicParsing="false" onAction="#handleAddContent" text="Post" />
         </children>
      </VBox>
   </right>
</BorderPane>
